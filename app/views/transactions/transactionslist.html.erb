<% content_for :title, "Home" %>
<!--<h1>User Home Page</h1>-->
<!-- Put Navigation stuff below-->
<!-- Page content goes below-->

<div class="container" style="background: #f9f9f9; border-radius: 1px; min-height: 600px; max-width: 1200px; ">

  <div class="row">
    <div class="col-md-2"><!--needs attention-->
      <ul class="nav nav-pills nav-stacked">
        <li><a href="/adminhome">Home</a></li>
        <li class="active"><a href="/transactionslist">List of Transactions</a></li>
        <li><a href="/userslist">Users List</a></li>
        <li><a href="/accounts">Accounts List</a></li>
        <li><a href="/accountsrequest">New Account Request</a></li>
        <li><a href="/admins/<%=session[:user_id]%>">Admin Details</a></li>
        <li><a href="/admins/<%=session[:user_id]%>/edit">Edit My Profile</a></li>
        <li><a href=/logout>Log out</a></li>
      </ul>
    </div>
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-4">
          <img src="/assets/logo.png" style="padding: 5px; margin-left: 30px; margin-top: 10px; max-height: 100px; max-width: 100px"/>
          <legend>View all transactions</legend>
        </div>
      </div>
      <label for="select" class="control-label">List of transactions</label>
        <!--TODO: Table containing a list of previous transactions come here-->
        <table class="table table-striped table-hover "><thead>
        <tr>
          <th>Transfer Type</th>
          <th>Credited Account Number</th>
          <th>Debited Account Number</th>
          <th>Amount</th>
          <th>Transfer Status</th>
          <th>Cancel</th>
          <!--<th>Delete</th>-->
        </tr>
        </thead>
          <tbody>
            <% @trans.each do |tran| %>
              <%if tran%>
                      <tr>
                        <td><%= tran.transaction_type%></td>
                        <td><%= tran.credited_acc_number %></td>
                        <td><%= tran.debited_acc_number%></td>
                        <td><%= tran.amount %></td>
                        <td><%= tran.transaction_status%></td>
                        <%if tran.transaction_status == "Pending"%>
                            <td><a href="/transactions/" style="color:#DB0000;" data-method="delete" rel="nofollow">
                              <i class="fa fa-times" aria-hidden="true"></i></a></td>
                        <%end%>
                      </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
    </div>

  </div>
</div>