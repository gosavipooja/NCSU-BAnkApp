<% content_for :title, "Users List" %>
<div class="container" style="background: #f9f9f9; border-radius: 1px; min-height: 600px; max-width: 1200px; ">

  <div class="row">
    <div class="col-md-2"><!--needs attention-->
      <ul class="nav nav-pills nav-stacked">
        <li class="active"><a href="/admins">Home</a></li>
        <li><a href="/transactionslist">List of Transactions</a></li>
        <li><a href="/users">Users List</a></li>
        <li><a href="/accounts">Accounts List</a></li>
        <li><a href="/accountsrequest">New Account Request</a></li>
        <li><a href="/adminshowall">Admin Details</a></li>
        <li><a href="/admins/<%=session[:admin_id]%>/edit">Edit My Profile</a></li>
        <li><a href=/logout>Log out</a></li>
      </ul>
    </div>

    <div class="col-md-10">
      <div class="row">
        <div class="col-md-4">
          <img src="/assets/logo.png" style="padding: 5px; margin-left: 30px; margin-top: 10px; max-height: 100px; max-width: 100px"/>
          <legend>Search Users</legend>
        </div>
      </div>

      <%= form_tag(users_path, method: :get, id: 'search-form') do %>
          <div class="col-md-8">
            <%= search_field_tag :q, @q, placeholder: 'Search Users by email', class: 'form-control col-md-8' %>
          </div>
          <div class="col-md-2">
            <%= submit_tag 'Search', name: nil, class: 'btn btn-primary' %>
          </div>
      <% end %>



    </div>

    <div class="row">
      <label class="col-sm-2 control-label  text-right">List of Users</label>
      <div>
        <table class="table table-striped table-hover ">
          <tbody>
          <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.address %></td>
                <td><a href= "/userdelete/<%= user.id %>" class="btn btn-primary btn-sm">Delete</a></td>
              </tr>
          <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
