<% content_for :title, "Users List" %>
<div class="container" style="background: #f9f9f9; border-radius: 1px; min-height: 600px; max-width: 1200px; ">

  <div class="row">
    <div class="col-md-2"><!--needs attention-->
      <ul class="nav nav-pills nav-stacked">
        <li class="active"><a href="/userhome">Home</a></li>
        <li><a href="/transactions">Make a transfer</a></li>
        <li><a href="/searchuser">Search User</a></li>
        <li><a href="/beneficiaries">Manage Beneficiaries</a></li>
        <li><a href="/usersettings">Settings</a></li>
        <li><a href=/logout>Log out</a></li>
      </ul>
    </div>
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-4">
          <img src="/assets/logo.png" style="padding: 5px; margin-left: 30px; margin-top: 10px; max-height: 100px; max-width: 100px"/>
          <legend>Search Users - User Search</legend>
        </div>
      </div>

      <%= form_tag({:redirect_to => 'usersearch', :method => :get}, id: 'search-form') do %>
        <div class="col-md-8">
        <%= search_field_tag :q, @q, placeholder: 'Search Users by email', class: 'form-control col-md-8' %>
      </div>
      <div class="col-md-2">
      <%= submit_tag 'Search', name: nil, class: 'btn btn-primary' %>
      </div>
       <% end %>


      <br><br><br><br>
      <br><br><br><br>

      <div class="row">
        <label class="col-sm-2 control-label  text-center">User Accounts</label>
        <div>
          <table class="table table-striped table-hover ">
            <thead>
              <th>Account Email</th>
              <th>Account Number</th>
            </thead>
            <tbody>
            <% @accounts.each do |account| %>
                <tr>
                  <td><%= account.email %></td>
                  <td><%= account.account_number %></td>
                </tr>
            <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>



  </div>
</div>
