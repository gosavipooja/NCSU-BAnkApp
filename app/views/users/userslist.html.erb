<% content_for :title, "Users List" %>
<div class="container" style="background: #f9f9f9; border-radius: 1px; min-height: 600px; max-width: 1200px; ">

  <div class="row">
    <div class="col-md-2"><!--needs attention-->
      <ul class="nav nav-pills nav-stacked">
        <li><a href="/adminhome">Home</a></li>
        <li><a href="/transactionslist">List of Transactions</a></li>
        <li class="active"><a href="/userslist">Users List</a></li>
        <li><a href="/accounts">Accounts List</a></li>
        <li><a href="/accountsrequest">New Account Request</a></li>
        <li><a href="/admins/<%=session[:user_id]%>">Admin Details</a></li>
        <li><a href="/admins/<%=session[:user_id]%>/edit">Edit My Profile</a></li>
        <li><a href=/logout>Log out</a></li>
      </ul>
    </div>
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-4">
          <img src="/assets/logo.png" style="padding: 5px; margin-left: 30px; margin-top: 10px; max-height: 100px; max-width: 100px"/>
          <legend>View list of users</legend>
        </div>
      </div>
      <label for="select" class="control-label">List of users accounts</label>
      <div class="row">
          <div class="col-md-8">
            <table class="table table-striped table-hover ">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>User Email</th>
                  <th>Address</th>
                </tr>
              </thead>
              <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.address %></td>
                </tr>
              <%end%>
            </tbody>
            </table>
          </div>
        </div>
    </div>
  </div>
</div>
