<!-- Put Navigation stuff below-->

<!-- Page content goes below-->

<div class="container" style="background: #f9f9f9; border-radius: 1px; min-height: 600px; max-width: 1200px; ">

  <div class="row">
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-4">
          <img src="/assets/logo.png" style="padding: 5px; margin-left: 30px; margin-top: 10px; max-height: 100px; max-width: 100px"/>
          <legend>Approve new requests here</legend>
        </div>
      </div>

      <label for="select" class="control-label">New requests</label>
      <table class="table table-striped table-hover "><thead>
      <tr>
        <th>Requestor's Email</th>
        <th>Status</th>
        <th>Approve</th>
        <th>Cancel</th>
      </tr>
      </thead>
        <tbody>
        <% if @accountcreationrequests%>
          <% @accountcreationrequests.each do |request| %>
            <% if true %>
                <tr>
                  <td><%= request.email%></td>
                  <td><%= request.status%></td>
                  <% if request.status == "Pending"%>
                    <td><a href="/accounts/create/<%= request.id %>" style="color:#00FF00;" data-method="post" rel="nofollow"> <i class="fa fa-check" aria-hidden="true"></i></a></td>
                    <td><a href="/accounts/delete/<%= request.id %>" style="color:#FF0000;" data-method="delete" rel="nofollow"> <i class="fa fa-times" aria-hidden="true"></i></a></td>
                  <%end%>
                </tr>
            <% end %>
          <% end %>
        <% end %>
        <tr>
        </tr>
        <tr>
        </tr>
        </tbody>
      </table>
  </div>
  </div>
</div>
