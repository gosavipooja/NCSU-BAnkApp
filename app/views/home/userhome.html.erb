<div class="container" style="background: #f9f9f9; border-radius: 1px; min-height: 600px; max-width: 1200px; ">

  <div class="row">
    <div class="col-md-2"><!--needs attention-->
      <ul class="nav nav-pills nav-stacked">
        <li class="active"><a href="/home">Home</a></li>
        <li><a href="/settings">Settings</a></li>
        <li><a href="/rooms">Rooms</a></li>
        <li><a href="/users/<%=session[:user_id]%>">My Profile</a></li>
        <li><a href=/logout>Log out</a></li>
      </ul>
    </div>
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-4">
          <img src="/assets/logo.png" style="padding: 5px; margin-left: 30px; margin-top: 10px; max-height: 100px; max-width: 100px"/>
          <legend>Welcome back, Sunil</legend>
        </div>
        <div class="row">
          <div class="col-md-4" style="margin-left: 30px; margin-top: 20px">
            <label for="select" class="control-label">Select Account</label>
            <!--TODO: Get list of accounts from DB and populate below-->
            <select class="form-control" id="select" name = "session[size]">
              <option value="">---</option>
              <option value="4">8966562780</option>
              <option value="6">8966562781</option>
              <option value="12">8966562782</option>
            </select>
          </div>
          <div class="col-md-4" style="margin-left: 30px; margin-top: 20px">
            <label for="select" class="control-label">Account Balance: $0</label>
            <!--TODO: Get Balance of accounts from DB and populate below-->
          </div>
        </div>
        <div class="col-md-4">
          <ul>
            <li><a href="http://news.railstutorial.org/">Make a transfer</a></li>
            <li><a href="http://news.railstutorial.org/">Manage Beneficiary</a></li>
            <li><a href="http://news.railstutorial.org/">Request a new account</a></li>
          </ul>
        </div>
      </div>
      <div class="jumbotron" style="background: #dfe3ee;">
        <form class="form-horizontal" action="search">
          <fieldset>

            <% flash.each do |key, value| %>
                <div class="row omb_row-sm-offset-3 no-gutter m-a-3">
                  <div class="col-xs-12 col-sm-6">
                    <%= content_tag(:span, value, :class => "label label-danger") %>
                  </div>
                </div>
                <br/>
            <% end %>
            <% flash.clear %>
            <div class="form-group">
              <label for="inputDate" class="col-lg-2 control-label">Date</label>
              <div class="col-lg-4">
                <input type="date" class="form-control" id="inputDate" placeholder="Date" name = "session[date]">
              </div>

              <label for="inputTime" class="col-lg-2 control-label">Time</label>
              <div class="col-lg-4">
                <input type="time" class="form-control" id="inputDate" placeholder="Time" name = "session[time]">
              </div>
            </div>

            <div class="form-group">
              <label for="select" class="col-lg-2 control-label">Building</label>
              <div class="col-lg-4">
                <select class="form-control" id="select" name = "session[building]">
                  <option value="">---</option>
                  <option value="DH-Hill">DH Hill Library</option>
                  <option value="James-Hunt">Dr James Hunt Library</option>
                </select>
              </div>

              <label for="select" class="col-lg-2 control-label">Rooms Type</label>
              <div class="col-lg-4">
                <select class="form-control" id="select" name = "session[size]">
                  <option value="">---</option>
                  <option value="4">Small - 4 chairs</option>
                  <option value="6">Medium - 6 chairs</option>
                  <option value="12">Large - 12 chairs</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="inputStatus" class="col-lg-2 control-label">Status</label>
              <div class="col-lg-4">
                <select class="form-control" id="select" name = "session[status]">
                  <option value="true">Available</option>
                  <option value="false">Not Available</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Reset</button>
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>

  </div>
</div>