<% content_for :title, "Login" %>

<!-- Put Navigation stuff below-->


<!-- Page content goes below-->

<div class="container" style="background: #5394A8; margin-top: 1%; border-radius: 10px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
  <div class="row">
    <img class="col-md-10" src="/assets/logo.png" style="padding: 5px; margin-left: 30px; margin-top: 10px; max-height: 100px; max-width: 100px"/>
    <legend class="col-md-10" style="margin-top: 40px" >Secure Banking</legend>
  </div>
  <div class="row" style="padding: 20px">
    <% flash.each do |key, value| %>
        <div class="col-md-10 col-sm-12 p-a-3">
          <div class="row omb_row-sm-offset-3 no-gutter m-a-3">
            <div class="col-xs-12 col-sm-6">
              <%= content_tag(:span, value, :class => "label label-danger") %>
            </div>
          </div></div>
    <% end %>
    <% flash.clear %>
    <div class="col-md-10 col-sm-12 p-a-3">
      <div class="row omb_row-sm-offset-3 no-gutter m-a-3">
        <div class="col-xs-12 col-sm-6">
          <div class="col-md-12">
            <%= form_tag({:action => 'login_attempt', :method => :post}, {:class => 'form-horizontal'}) %>
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-user"></i></span>
              <%= text_field "user", "email", "class" => "form-control", "placeholder" => "Email" %>
            </div>
            <!--<span class="help-block"></span>-->

            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock"></i></span>
              <%= password_field "user", "password", "class" => "form-control" , "placeholder" => "Password"%>
            </div>
            <br/>
            <button class="btn btn-lg btn-primary btn-block" style="background-color: #73E9EA; max-height: 60px; color: #666666" type="submit">Login</button>
            </form>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title">Don't have an account yet?</h3>
            </div>
            <div class="panel-body" style="background-color: #174252; text-emphasis-color: #73E9EA">
              <p style="color: #F7F7F7">Sign up below to get an account and manage your finances</p>
              <!--<br/> <br/>-->
              <a href="/signup" style="color: #00f0ff">Sign Up</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>