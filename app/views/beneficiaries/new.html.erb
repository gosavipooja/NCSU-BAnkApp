<% content_for :title, "Add benificiary" %>

    <!-- Navigation -->


    <div class="container" style="background: #ffffff; min-height: 600px; max-width: 1200px; ">

      <div class="row">
        <div class="col-md-8">
          <img src="/assets/logo.png" style="padding: 5px; margin-top: 10px; max-height: 100px; max-width: 100px"/>
          <div class="jumbotron" style="background: #dfe3ee;">
            <legend>Add new beneficiary</legend>
            <%= form_tag({:action => :create, :method => :post}, {:class => 'form-horizontal'}) %>
            <% flash.each do |key, value| %>
                <div class="row omb_row-sm-offset-3 no-gutter m-a-3">
                  <div class="col-xs-12 col-sm-6">
                    <%= content_tag(:span, value, :class => "label label-danger") %>
                  </div>
                </div>
                <br/>
            <% end %>
            <% flash.clear %>
            <div class="form-group">
              <label for="email" class="col-lg-2 control-label">Email</label>
              <div class="col-lg-4">
                <!--<input type="text" name="beneficiary[email]" class="form-control" id="email" placeholder="@domain.com">-->
                <%= text_field "beneficiary", "beneficiaryemail", "class" => "form-control" , "placeholder" => "user@domain.com"%>
                <%= hidden_field "beneficiary", "email", "value" => session[:email], "class" => "form-control" %>
              </div>
              <label for="email" class="col-lg-2 control-label">Account number</label>
              <div class="col-lg-4">
                <!--<input type="text" name="beneficiary[account]" class="form-control" id="account" placeholder="#">-->
                <%= text_field "beneficiary", "account", "class" => "form-control" , "placeholder" => "#"%>
              </div>
            </div>
            <div class="form-group">
              <label for="nickname" class="col-lg-2 control-label">Nickname</label>
              <div class="col-lg-4">
                <!--<input type="text" name="beneficiary[nickname]" class="form-control" id="name" placeholder="">-->
                <%= text_field "beneficiary", "nickname", "class" => "form-control", "placeholder" => "Nickname" %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Reset</button>
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /.container -->
