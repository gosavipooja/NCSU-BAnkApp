<% content_for :title, "Beneficiaries" %>

<!-- Put Navigation stuff below-->


<!-- Page content goes below-->
<div class="container" style="background: #f9f9f9; border-radius: 1px; min-height: 600px; max-width: 1200px; ">

  <div class="row">
    <div class="row">
      <div class="col-md-4" style=" margin-left: 30px">
        <img src="/assets/logo.png" style="padding: 5px; margin-top: 10px; max-height: 100px; max-width: 100px"/>
        <legend>Manage your beneficiaries list here</legend>
        <!-- TODO: add button to request for adding new account-->
        <a href="/beneficiaries/add" class="btn btn-primary btn-sm" style="background-color: #73E9EA">Add</a>
      </div>
    </div>
    <br/>
    <div class="row" style="margin-top: 10px; margin-left: 20px; margin-right: 20px ">
      <label for="select" class="control-label">List of beneficiaries</label>
      <!--<div class="jumbotron" style="background: #dfe3ee;">-->
        <!--TODO: Table containing a list of beneficiaries for the user come here-->
        <table class="table table-striped table-hover "><thead>
        <tr>
          <th>Nickname</th>
          <th>Account number</th>
          <th>Delete</th>
        </tr>
        </thead><tbody>
        <% @beneficiaries.each do |beneficiary| %>
            <% if session[:email] == beneficiary.email %>
                <tr>
                  <td><%= beneficiary.nickname %></td>
                  <td><%= beneficiary.account %></td>
                  <td><a href="<%= beneficiary.id %>" style="color:#DB0000;" data-method="delete" rel="nofollow"> <i class="fa fa-trash" aria-hidden="true"></i></a></td>
                </tr>
            <% end %>
        <% end %>
        <tr>
        </tr>
        <tr>
        </tr>
        </tbody>
        </table>
        <i class="icon-edit"></i>
      <!--</div>-->
    </div>

  </div>
</div>
