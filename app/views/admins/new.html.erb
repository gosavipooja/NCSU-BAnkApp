<% content_for :title, "Add admin" %>

<!-- Navigation -->


<div class="container" style="background: #ffffff; min-height: 600px; max-width: 1200px; ">

  <div class="row">
    <div class="col-md-8">
      <img src="/assets/logo.png" style="padding: 5px; margin-top: 10px; max-height: 100px; max-width: 100px"/>
      <div class="jumbotron" style="background: #dfe3ee;">
        <legend>Add new admin account</legend>
        <%= form_tag({:controller=>"admins", :action => :create, :method => :post}, {:class => 'form-horizontal'}) %>
        <% flash.each do |key, value| %>
            <div class="row omb_row-sm-offset-3 no-gutter m-a-3">
              <div class="col-xs-12 col-sm-6">
                <%= content_tag(:span, value, :class => "label label-danger") %>
              </div>
            </div>
            <br/>
        <% end %>
        <% flash.clear %>
        <!--Name-->
        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label">Name</label>
          <div class="col-lg-10">
            <%= text_field "admin", "name", "class" => "form-control", "placeholder" => "Full Name" %>
          </div>
        </div>
        <!--Email-->
        <div class="form-group">
          <label for="inputEmail" class="col-lg-2 control-label">Email</label>
          <div class="col-lg-10">
            <%= text_field "admin", "email", "class" => "form-control" , "placeholder" => "user@domain.com"%>
            <%= hidden_field "admin", "is_pre_admin", "value" => false, "class" => "form-control" %>
          </div>
        </div>
        <!--Password-->
        <div class="form-group">
          <label for="inputPassword" class="col-lg-2 control-label">Password</label>
          <div class="col-lg-10">
            <%= password_field "admin", "password_field", "class" => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <button type="reset" class="btn btn-default">Reset</button>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /.container -->
