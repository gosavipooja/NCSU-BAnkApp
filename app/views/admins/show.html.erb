<% content_for :title, "Home" %>
<!--<h1>User Home Page</h1>-->
<!-- Put Navigation stuff below-->
<!-- Page content goes below-->

<div class="container" style="background: #f9f9f9; border-radius: 1px; min-height: 600px; max-width: 1200px; ">

  <div class="row">
    <div class="col-md-2"><!--needs attention-->
      <ul class="nav nav-pills nav-stacked">
        <li><a href="/adminhome">Home</a></li>
        <li><a href="/transactionslist">List of Transactions</a></li>
        <li><a href="/userslist">Users List</a></li>
        <li><a href="/accounts">Accounts List</a></li>
        <li><a href="/accountsrequest">New Account Request</a></li>
        <li class="active"><a href="/admins/<%=session[:user_id]%>">Admin Details</a></li>
        <li><a href="/admins/<%=session[:user_id]%>/edit">Edit My Profile</a></li>
        <li><a href=/logout>Log out</a></li>
      </ul>
    </div>
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-4">
          <img src="/assets/logo.png" style="padding: 5px; margin-left: 30px; margin-top: 10px; max-height: 100px; max-width: 100px"/>
          <legend>Manage admin accounts here</legend>
          <a href="/newadmin" class="btn btn-primary btn-sm">Add new admin</a>
        </div>
      </div>

      <br></br>

      <div class="row">
        <div class="col-md-8">
          <label for="select" class="control-label">List of admins</label>
          <table class="table table-striped table-hover "><thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Delete</th>
          </tr>
          </thead><tbody>
          <% @admins.each do |admin| %>
              <% if session[:user_id] != admin.id && admin.email != "admin@ncsu.edu" %>
                  <tr>
                    <td><%= admin.name %></td>
                    <td><%= admin.email %></td>
                    <% if !admin.is_pre_admin %>
                        <td>
                          <a href="<%= admin_path(@admin) %>" style="color:#222;" data-confirm="Are you sure?" data-method="destroy" rel="nofollow">
                            <i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    <%else%>
                        <td></td>
                    <% end %>
                  </tr>
              <% end %>
          <% end %>
          </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
